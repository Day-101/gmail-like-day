category = document.getElementById("<%= @task.category.title %>").firstElementChild;
newBook = document.createElement("li");
newBook.id = "<%= @task.id %>"
newBook.innerHTML = "<%= j render 'list-element', task: @task %>"
category.appendChild(newBook);

var opacity = 0;

function fadeIn() {
   if (opacity < 1) {
      opacity += .2;
      newBook.style.opacity = opacity;
      setTimeout(function(){fadeIn()}, 50);   
   }
}

fadeIn();