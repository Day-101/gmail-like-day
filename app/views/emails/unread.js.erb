email = document.getElementById("<%= @email.id %>");
emailContent = document.getElementById("email-content")
emailLink = emailContent.lastElementChild.lastElementChild;
email.firstElementChild.classList.add("font-weight-bold");
emailContent.lastElementChild.removeChild(emailLink);
emailContent.lastElementChild.insertAdjacentHTML("beforeend", '<%= j render "button", destination: email_read_path(@email), title: "Read" %>');